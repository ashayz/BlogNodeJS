<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>

<body>

</body>
<div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New Article</a>
    <% articles.forEach(article=>{ %>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title"><%= article.title%></h4>
            <div class="card-muted mb-2"><%= article.created_at.toLocaleDateString() %></div>
            <div class="card-text mb-2"><%=article.description%></div>
            <a href="articles/<%= article.slug %>" class="btn btn-primary">Read more</a>
            <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">DELETE</button>
            </form>
        </div>
    </div>
    <% }) %>
</div>

</html>